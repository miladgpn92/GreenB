@page

@model IndexModel
@{
    ViewData["Title"] = "صفحه اصلی";
    ViewBag.IsIndex = true;
}

<section class="mx-auto w-full max-w-6xl px-6 py-12">
    <div class="flex flex-col gap-4 sm:flex-row sm:items-end sm:justify-between">
        <div class="space-y-3">
            <span class="text-sm font-semibold text-emerald-600">بروشورهای گرین‌بی</span>
            <h1 class="text-3xl font-black text-gray-900 sm:text-4xl">مرکز دانلود و مشاهده بروشورها</h1>
            <p class="max-w-3xl text-gray-600">آخرین بروشورهای منتشر شده را اینجا ببینید. اگر تنها یک بروشور وجود دارد،
                پیش‌نمایش مستقیم آن برای شما نمایش داده می‌شود.</p>
        </div>
        <div class="rounded-full bg-emerald-50 px-4 py-2 text-xs font-semibold text-emerald-700">
            @Model.Brochures.Count بروشور
        </div>
    </div>

    @if (Model.Brochures.Count == 0)
    {
        <div class="mt-10 rounded-2xl border border-dashed border-gray-200 bg-white p-8 text-center text-gray-500">
            <p class="text-lg font-semibold text-gray-700">فعلا بروشوری ثبت نشده است.</p>
            <p class="mt-2 text-sm">به محض انتشار بروشور جدید، اینجا نمایش داده می‌شود.</p>
        </div>
    }
    else if (Model.Brochures.Count == 1)
    {
        var brochure = Model.Brochures[0];

        <div class="_df_book" height="500vh" direction="2" webgl="true" backgroundcolor="teal"
            source="@brochure.PdfFileUrl" id="df_manual_book">
        </div>


        <div class="mt-10 grid gap-6 lg:grid-cols-[1.05fr,0.95fr]">
            <div
                class="relative overflow-hidden rounded-3xl bg-gradient-to-br from-emerald-600 to-green-400 p-8 text-white shadow-lg">
                <div class="flex flex-wrap items-center gap-3 text-sm">
                    <span class="rounded-full bg-white/15 px-3 py-1 font-semibold">بروشور ویژه</span>
                    <span class="text-white/80">@((brochure.UpdatedAt ?? brochure.CreatedAt).ToString("yyyy/MM/dd"))</span>
                </div>
                <h2 class="mt-6 text-3xl font-black">@brochure.Title</h2>
                <p class="mt-3 max-w-2xl text-white/90">آدرس فایل زیر فعال است. برای دانلود مستقیم یا مشاهده جزئیات روی
                    دکمه‌های پایین کلیک کنید.</p>
                <div class="mt-8 flex flex-wrap gap-3">
                    <a class="inline-flex items-center justify-center rounded-xl bg-white px-5 py-3 text-sm font-semibold text-emerald-700 shadow-sm transition hover:-translate-y-0.5 hover:shadow-lg"
                        href="@brochure.PdfFileUrl" target="_blank" rel="noopener">
                        دانلود بروشور PDF
                    </a>
                    <a class="inline-flex items-center justify-center rounded-xl border border-white/50 px-5 py-3 text-sm font-semibold text-white transition hover:bg-white/10"
                        href="@Url.Page("/Brochures/Details", new { slug = brochure.Slug ?? brochure.Id.ToString() })">
                        مشاهده جزئیات
                    </a>
                </div>
                <div class="pointer-events-none absolute -left-10 -top-10 h-44 w-44 rounded-full bg-white/10 blur-3xl">
                </div>
                <div class="pointer-events-none absolute bottom-0 right-0 h-32 w-32 rounded-full bg-white/10 blur-3xl">
                </div>
            </div>
            <div class="overflow-hidden rounded-3xl border border-gray-200 bg-white shadow-md">
                <div class="relative h-[520px] w-full">
                    <object data="@brochure.PdfFileUrl" type="application/pdf" class="h-full w-full">
                        <div
                            class="flex h-full w-full flex-col items-center justify-center gap-3 bg-gray-50 px-6 text-center text-gray-600">
                            <p class="font-semibold">پیش‌نمایش در مرورگر شما فعال نیست.</p>
                            <a class="inline-flex items-center justify-center rounded-lg bg-emerald-600 px-4 py-2 text-sm font-semibold text-white transition hover:bg-emerald-700"
                                href="@brochure.PdfFileUrl" target="_blank" rel="noopener">
                                دانلود فایل بروشور
                            </a>
                        </div>
                    </object>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="mt-10 grid gap-5 sm:grid-cols-2 xl:grid-cols-3">
            @foreach (var brochure in Model.Brochures)
            {
                var brochureLink = Url.Page("/Brochures/Details", new { slug = brochure.Slug ?? brochure.Id.ToString() });
                <a href="@brochureLink"
                    class="group relative flex h-full flex-col overflow-hidden rounded-2xl border border-gray-200 bg-white p-5 shadow-sm transition hover:-translate-y-1 hover:shadow-lg">
                    <div class="flex items-center justify-between text-xs text-gray-500">
                        <span class="rounded-full bg-emerald-50 px-3 py-1 font-semibold text-emerald-700">PDF</span>
                        <span>@brochure.CreatedAt.ToString("yyyy/MM/dd")</span>
                    </div>
                    <h3 class="mt-4 text-lg font-black text-gray-900">@brochure.Title</h3>
                    <p class="mt-2 text-sm text-gray-600">برای مشاهده و دانلود بروشور روی کارت کلیک کنید.</p>
                    <div class="mt-auto flex items-center justify-between pt-6 text-emerald-600">
                        <span class="font-semibold">مشاهده جزئیات</span>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transition group-hover:translate-x-1" fill="none"
                            viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M9 5l7 7-7 7" />
                        </svg>
                    </div>
                </a>
            }
        </div>
    }
</section>
