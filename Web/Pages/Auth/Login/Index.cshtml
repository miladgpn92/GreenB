@page
@model IndexModel
@inject IStringLocalizer<ResourceLibrary.Panel.Common.Auth.Login.Login> Localizer;
@{
    ViewData["Title"] = @Localizer["PageTitle"];
    Layout = "_Layout";
}
<main class="mx-auto w-full max-w-3xl px-5 py-12">
    <div class="relative overflow-hidden rounded-3xl bg-gradient-to-br from-emerald-600 to-green-400 px-6 py-7 text-white shadow-xl">
        <div class="flex flex-col gap-2">
            <span class="text-xs font-semibold uppercase tracking-[0.25em] text-white/80">@Localizer["PageTitle"]</span>
            <h1 class="text-3xl font-black sm:text-4xl">@Localizer["Title"]</h1>
            <p class="max-w-2xl text-sm sm:text-base text-white/90">@Localizer["Subtitle"]</p>
        </div>
        <div class="pointer-events-none absolute -left-10 -bottom-16 h-40 w-40 rounded-full bg-white/10 blur-3xl"></div>
        <div class="pointer-events-none absolute right-0 top-0 h-24 w-24 rounded-full bg-white/20 blur-2xl"></div>
    </div>

    <div class="relative -mt-10 rounded-3xl border border-gray-200 bg-white p-6 shadow-xl sm:p-8">
        <div class="absolute -top-5 right-6 inline-flex items-center gap-2 rounded-full bg-emerald-50 px-3 py-1 text-xs font-semibold text-emerald-700 shadow-sm">
            <span class="h-2 w-2 rounded-full bg-emerald-500"></span>@Localizer["PageTitle"]
        </div>
        <form class="space-y-5" method="post">
            <div>
                <div asp-validation-summary="ModelOnly" class="rounded-xl border border-rose-100 bg-rose-50 px-4 py-3 text-sm text-rose-700 shadow-sm"></div>
            </div>
            <div class="grid gap-4">
                <dt:input-text asp-for="AuthDto.username" text-align="TextAlign.Left" dir="TextDirection.ltr"></dt:input-text>
                <dt:input-text asp-for="AuthDto.password" type="InputsType.Password"></dt:input-text>
            </div>

            <div class="pt-1">
                <recaptcha />
            </div>

            <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
                <a href="/auth/forgotpassword" class="text-sm font-semibold text-emerald-700 transition hover:text-emerald-800">
                    @Localizer["ForgotPassword"]
                </a>
                <button class="inline-flex items-center justify-center rounded-xl bg-emerald-600 px-5 py-3 text-sm font-semibold text-white shadow-sm transition hover:-translate-y-0.5 hover:bg-emerald-700 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2">
                    @Localizer["Button"]
                </button>
            </div>
        </form>
    </div>

    <div class="mt-6 flex items-center justify-center gap-2 text-sm text-gray-600">
        <span>@Localizer["RegisterText"]</span>
        <a href="/auth/register" class="font-semibold text-emerald-700 transition hover:text-emerald-800">@Localizer["RegisterLink"]</a>
    </div>
</main>
