@page
@model IndexModel
@inject IStringLocalizer<ResourceLibrary.Panel.Common.Auth.Register.Register> Localizer;
@{
    ViewData["Title"] = Localizer["Title"];
    Layout = "_Layout";
}

<main class="mx-auto w-full max-w-3xl px-5 py-12">
    <div class="relative overflow-hidden rounded-3xl bg-gradient-to-br from-emerald-600 to-green-400 px-6 py-7 text-white shadow-xl">
        <div class="space-y-2 text-center sm:text-right">
            <span class="text-xs font-semibold uppercase tracking-[0.25em] text-white/80">@Localizer["Title"]</span>
            <h1 class="text-3xl font-black sm:text-4xl">@Localizer["Title"]</h1>
            <p class="text-sm sm:text-base text-white/90">@Localizer["Subtitle"]</p>
        </div>
        <div class="pointer-events-none absolute -right-14 -bottom-10 h-44 w-44 rounded-full bg-white/10 blur-3xl"></div>
        <div class="pointer-events-none absolute left-4 top-4 h-20 w-20 rounded-full bg-white/20 blur-2xl"></div>
    </div>

    <div class="relative -mt-10 rounded-3xl border border-gray-200 bg-white p-6 shadow-xl sm:p-8">
        <div class="absolute -top-5 left-6 inline-flex items-center gap-2 rounded-full bg-emerald-50 px-3 py-1 text-xs font-semibold text-emerald-700 shadow-sm">
            <span class="h-2 w-2 rounded-full bg-emerald-500"></span>@Localizer["Title"]
        </div>
        <form class="space-y-5" method="post">
            <div>
                <div asp-validation-summary="ModelOnly" class="rounded-xl border border-rose-100 bg-rose-50 px-4 py-3 text-sm text-rose-700 shadow-sm"></div>
            </div>
            <div class="grid gap-4">
                <dt:input-text asp-for="model.UserName" dir="TextDirection.ltr"></dt:input-text>
            </div>
            <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
                <span class="text-sm text-gray-600">
                    @Localizer["LoginText"]
                    <a href="/auth/login" class="font-semibold text-emerald-700 transition hover:text-emerald-800">@Localizer["LoginLink"]</a>
                </span>
                <button class="inline-flex items-center justify-center rounded-xl bg-emerald-600 px-5 py-3 text-sm font-semibold text-white shadow-sm transition hover:-translate-y-0.5 hover:bg-emerald-700 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2">
                    @Localizer["Submit"]
                </button>
            </div>
        </form>
    </div>
</main>
