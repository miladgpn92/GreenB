@page
@model Web.Pages.DTCMS.AI.IndexModel
@{
    ViewData["Title"] = "چت با هوش مصنوعی";
    Layout = "_DashLayout";
}

<div class="flex h-screen bg-white">
    <!-- Sidebar -->
    <div class="w-[280px] border-l flex flex-col">
        <!-- Header with Search -->
        <div class="p-4 border-b">
            <div class="flex items-center justify-between mb-4">
                <h1 class="text-xl font-semibold">چت</h1>
                <button class="p-2 hover:bg-gray-100 rounded-full">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
                    </svg>
                </button>
            </div>
            <!-- New Chat Button -->
            <button class="w-full bg-[#0F1729] text-white py-2 px-4 rounded-lg flex items-center justify-center gap-2 hover:bg-[#1a2542] transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
                </svg>
                چت جدید
            </button>
        </div>

        <!-- Saved Chats -->
        <div class="flex-1 overflow-y-auto">
            <div class="p-2">
                <h2 class="px-3 py-2 text-sm font-medium text-gray-500">ذخیره شده‌ها</h2>
                <div class="space-y-1">
                    <!-- Chat Items -->
                    <div class="flex items-center gap-3 p-3 hover:bg-gray-100 rounded-lg cursor-pointer">
                        <div class="w-7 h-7 bg-blue-100 rounded-full flex items-center justify-center">
                            <span class="text-blue-600 text-sm">C</span>
                        </div>
                        <span class="text-sm">ChatAI</span>
                    </div>
                    <div class="flex items-center gap-3 p-3 hover:bg-gray-100 rounded-lg cursor-pointer">
                        <div class="w-7 h-7 bg-orange-100 rounded-full flex items-center justify-center">
                            <span class="text-orange-600 text-sm">I</span>
                        </div>
                        <span class="text-sm">Image of sun</span>
                    </div>
                    <div class="flex items-center gap-3 p-3 hover:bg-gray-100 rounded-lg cursor-pointer">
                        <div class="w-7 h-7 bg-purple-100 rounded-full flex items-center justify-center">
                            <span class="text-purple-600 text-sm">D</span>
                        </div>
                        <span class="text-sm">Data Analyst</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Chat Area -->
    <div class="flex-1 flex flex-col">
        <!-- Header -->
        <div class="flex items-center justify-between px-6 py-3 border-b">
            <div class="flex items-center gap-2">
                <h2 class="text-lg font-semibold">Orbita GPT</h2>
                <span class="px-2 py-0.5 text-xs bg-gray-100 rounded-full">Plus</span>
            </div>
            <div class="flex items-center gap-4">
                <button class="flex items-center gap-2 text-sm hover:bg-gray-100 px-4 py-2 rounded-lg">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
                    </svg>
                    تنظیمات
                </button>
                <button class="flex items-center gap-2 text-sm hover:bg-gray-100 px-4 py-2 rounded-lg">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M15 8a3 3 0 10-2.977-2.63l-4.94 2.47a3 3 0 100 4.319l4.94 2.47a3 3 0 10.895-1.789l-4.94-2.47a3.027 3.027 0 000-.74l4.94-2.47C13.456 7.68 14.19 8 15 8z" />
                    </svg>
                    اشتراک‌گذاری
                </button>
                <button class="bg-[#0F1729] text-white px-4 py-2 rounded-lg hover:bg-[#1a2542] transition-colors flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
                    </svg>
                    چت جدید
                </button>
            </div>
        </div>

        <!-- Chat Content -->
        <div class="flex-1 overflow-y-auto p-6">
            <!-- Empty State -->
            <div class="h-full flex items-center justify-center">
                <div class="text-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto mb-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
                    </svg>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">از من هر چیزی بپرسید...</h3>
                    <p class="text-sm text-gray-500">برای شروع گفتگو، سوال خود را در کادر پایین بنویسید.</p>
                </div>
            </div>
        </div>

        <!-- Message Input -->
        <div class="p-6 border-t">
            <div class="max-w-4xl mx-auto relative">
                <div class="flex items-center gap-2">
                    <button class="p-2 hover:bg-gray-100 rounded-lg">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
                        </svg>
                    </button>
                    <input type="text" 
                           class="flex-1 border rounded-lg px-4 py-3 focus:outline-none focus:border-blue-500" 
                           placeholder="هر چیزی از من بپرسید...">
                    <button class="p-2 hover:bg-gray-100 rounded-lg">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M7 4a3 3 0 016 0v4a3 3 0 11-6 0V4zm4 10.93A7.001 7.001 0 0017 8a1 1 0 10-2 0A5 5 0 015 8a1 1 0 00-2 0 7.001 7.001 0 006 6.93V17H6a1 1 0 100 2h8a1 1 0 100-2h-3v-2.07z" />
                        </svg>
                    </button>
                </div>
                <p class="text-xs text-gray-500 mt-2 text-center">ممکن است اطلاعات نادرست نمایش داده شود، لطفاً دوباره بررسی کنید.</p>
            </div>
        </div>
    </div>
</div>
