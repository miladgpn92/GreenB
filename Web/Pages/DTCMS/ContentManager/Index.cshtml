@page
@model Web.Pages.DTCMS.ContentManager.IndexModel

@{
    ViewData["Title"] = "مدیریت محتوا";

    Layout = "_DashLayout";
}

<div class="content-manager-container p-4" id="content__manager__module">
    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-bold text-gray-800">مدیریت محتوا</h1>
            <div class="flex space-x-2 space-x-reverse">
                <button id="import-btn" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md transition duration-200 flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0l-4 4m4-4v12" />
                    </svg>
                    ورود اطلاعات
                </button>
                <button id="export-btn" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-md transition duration-200 flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                    </svg>
                    خروجی اطلاعات
                </button>
            </div>
        </div>

        <div class="mb-6">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-xl font-semibold text-gray-700">صفحات</h2>
                <button id="add-page-btn" class="bg-indigo-500 hover:bg-indigo-600 text-white px-3 py-1 rounded-md transition duration-200 flex items-center text-sm">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    افزودن صفحه
                </button>
            </div>
            <div id="pages-container" class="space-y-4">
                <!-- Pages will be added here dynamically -->
            </div>
        </div>

        <div id="content-items-container" class="mt-8 hidden">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-xl font-semibold text-gray-700">محتوای <span id="current-page-name"></span></h2>
                <button id="add-content-btn" class="bg-indigo-500 hover:bg-indigo-600 text-white px-3 py-1 rounded-md transition duration-200 flex items-center text-sm">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    افزودن محتوا
                </button>
            </div>
            <div class="overflow-x-auto">
                <table class="min-w-full bg-white border border-gray-200 rounded-lg">
                    <thead>
                        <tr class="bg-gray-100">
                            <th class="py-3 px-4 text-right font-semibold text-gray-700 border-b">شناسه</th>
                            <th class="py-3 px-4 text-right font-semibold text-gray-700 border-b">نام یکتا</th>
                            <th class="py-3 px-4 text-right font-semibold text-gray-700 border-b">نوع</th>
                            <th class="py-3 px-4 text-right font-semibold text-gray-700 border-b">مقدار</th>
                            <th class="py-3 px-4 text-right font-semibold text-gray-700 border-b">عملیات</th>
                        </tr>
                    </thead>
                    <tbody id="content-items-table">
                        <!-- Content items will be added here dynamically -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal for adding/editing page -->
<div id="page-modal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden z-50">
    <div class="bg-white rounded-lg shadow-lg p-6 w-full max-w-md">
        <h2 id="page-modal-title" class="text-xl font-semibold text-gray-800 mb-4">افزودن صفحه جدید</h2>
        <div class="mb-4">
            <label for="page-name" class="block text-gray-700 font-medium mb-2">نام صفحه</label>
            <input type="text" id="page-name" class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500">
        </div>
        <div class="flex justify-end space-x-2 space-x-reverse">
            <button id="page-modal-cancel" class="bg-gray-300 hover:bg-gray-400 text-gray-800 px-4 py-2 rounded-md transition duration-200">انصراف</button>
            <button id="page-modal-save" class="bg-indigo-500 hover:bg-indigo-600 text-white px-4 py-2 rounded-md transition duration-200">ذخیره</button>
        </div>
    </div>
</div>

<!-- Modal for adding/editing content item -->
<div id="content-modal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden z-50">
    <div class="bg-white rounded-lg shadow-lg p-6 w-full max-w-md">
        <h2 id="content-modal-title" class="text-xl font-semibold text-gray-800 mb-4">افزودن محتوای جدید</h2>
        <div class="mb-4">
            <label for="content-id" class="block text-gray-700 font-medium mb-2">شناسه</label>
            <input type="number" id="content-id" class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500">
        </div>
        <div class="mb-4">
            <label for="content-type" class="block text-gray-700 font-medium mb-2">نوع</label>
            <select id="content-type" class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                <option value="text">متن</option>
                <option value="textarea">متن چند خطی</option>
                <option value="img">تصویر</option>
                <option value="html">HTML</option>
            </select>
        </div>
        <div class="mb-4">
            <label for="content-value" class="block text-gray-700 font-medium mb-2">مقدار</label>
            <textarea id="content-value" class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500 h-24"></textarea>
        </div>
        <div class="flex justify-end space-x-2 space-x-reverse">
            <button id="content-modal-cancel" class="bg-gray-300 hover:bg-gray-400 text-gray-800 px-4 py-2 rounded-md transition duration-200">انصراف</button>
            <button id="content-modal-save" class="bg-indigo-500 hover:bg-indigo-600 text-white px-4 py-2 rounded-md transition duration-200">ذخیره</button>
        </div>
    </div>
</div>

<!-- Modal for import/export -->
<div id="import-export-modal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden z-50">
    <div class="bg-white rounded-lg shadow-lg p-6 w-full max-w-2xl">
        <h2 id="import-export-modal-title" class="text-xl font-semibold text-gray-800 mb-4">ورود/خروج اطلاعات</h2>
        <div class="mb-4">
            <textarea id="import-export-content" class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500 h-64 font-mono text-sm"></textarea>
        </div>
        <div class="flex justify-end space-x-2 space-x-reverse">
            <button id="import-export-modal-cancel" class="bg-gray-300 hover:bg-gray-400 text-gray-800 px-4 py-2 rounded-md transition duration-200">انصراف</button>
            <button id="import-export-modal-save" class="bg-indigo-500 hover:bg-indigo-600 text-white px-4 py-2 rounded-md transition duration-200">ذخیره</button>
        </div>
    </div>
</div>